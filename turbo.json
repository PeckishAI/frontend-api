{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "storybook-static/**"],
      "cache": false // Disable cache for debugging purposes
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "storybook:dev": {
      "cache": false,
      "persistent": true
    },
    "depcheck": {}
  }
}
